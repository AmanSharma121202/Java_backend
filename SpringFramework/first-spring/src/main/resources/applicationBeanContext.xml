<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="myBean" class="com.example.demo.GreetingService">
    </bean>
    <bean id = "EmailNotificationService" class = "com.example.looseCoupling.EmailNotificationService">
    </bean>
    <bean id = "SMSNotificationService" class = "com.example.looseCoupling.SMSNotificationService">
    </bean>
    <bean id = "UserServiceEmail" class="com.example.looseCoupling.UserService">
        <property name="notificationService" ref="EmailNotificationService"/>
    </bean>
    <bean id = "UserServiceSMS" class="com.example.looseCoupling.UserService">
<!--        Dependency injection through setters-->
        <property name="notificationService" ref="SMSNotificationService"/>
<!--        Dependency injection through constructors-->
<!--        <constructor-arg ref="SMSNotificationService"/>-->
    </bean>
</beans>